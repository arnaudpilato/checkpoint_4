{% extends 'admin.html.twig' %}

{% block title %}Marque index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-5">Marques</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for brand in brands %}
                <tr>
                    <td>
                        <img class="admin-picture" src="{{ asset('uploads/brand/' ~ brand.picture) }}" alt="{{ brand.picture }}" title="{{ brand.picture }}">
                    </td>
                    <td>{{ brand.name }}</td>
                    <td>{{ brand.description }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('admin_brand_edit', {'id': brand.id}) }}">Modifier</a>{{ include('admin/brand/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center mt-5">
            <a class="btn btn-secondary" href="{{ path('admin_brand_new') }}">Ajouter</a>
        </div>
        <div class="text-right">
            <a class="btn btn-secondary mt-5" href="{{ path('admin_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
