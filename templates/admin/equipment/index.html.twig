{% extends 'base.html.twig' %}

{% block title %}Equipement index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-5">Equipements</h1>
        <table class="table text-center">
            <thead>
            <tr>
                <th>Picture</th>
                <th>Name</th>
                <th>Description</th>
                <th>Brand</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for equipment in equipment %}
                <tr>
                    <td>
                        <img class="admin-picture" src="{{ asset('uploads/equipment/' ~ equipment.picture) }}" alt="{{ equipment.picture }}" title="{{ equipment.picture }}">
                    </td>
                    <td>{{ equipment.name }}</td>
                    <td>{{ equipment.description }}</td>
                    <td>{{ equipment.brand }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('admin_equipment_edit', {'id': equipment.id}) }}">Modifier</a>{{ include('admin/equipment/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center mt-5">
            <a class="btn btn-secondary" href="{{ path('admin_equipment_new') }}">Ajouter</a>
        </div>
        <div class="text-right">
            <a class="btn btn-secondary mt-5" href="{{ path('admin_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
