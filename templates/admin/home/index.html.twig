{% extends 'admin.html.twig' %}

{% block title %}Home index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-5">Home</h1>
        <table class="table">
            <thead>
            <tr>
                <th>Image</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for home in homes %}
                <tr>
                    <td>
                        <img class="admin-picture" src="{{ asset('uploads/home/' ~ home.picture) }}" alt="{{ home.picture }}" title="{{ home.picture }}">
                    </td>
                    <td>{{ home.name }}</td>
                    <td>{{ home.description }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('admin_home_edit', {'id': home.id}) }}">Modifier</a>{{ include('admin/home/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun résultat trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <div class="text-center">
            <a class="btn btn-secondary" href="{{ path('admin_home_new') }}">Ajouter</a>
        </div>
        <div class="text-right">
            <a class="btn btn-secondary mt-5" href="{{ path('admin_index') }}">Retour</a>
        </div>
    </div>
{% endblock %}
