{% extends 'base.html.twig' %}

{% block title %}Discipline index{% endblock %}

{% block body %}
    <h1>Discipline index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Picture</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discipline in disciplines %}
            <tr>
                <td>{{ discipline.id }}</td>
                <td>{{ discipline.name }}</td>
                <td>{{ discipline.description }}</td>
                <td>{{ discipline.picture }}</td>
                <td>
                    <a href="{{ path('discipline_show', {'id': discipline.id}) }}">show</a>
                    <a href="{{ path('discipline_edit', {'id': discipline.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('discipline_new') }}">Create new</a>
{% endblock %}
