{% extends 'base.html.twig' %}

{% block title %}Equipment index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5">Equipment</h1>
        <div class="row mt-5">
            <div class="col text-center">
                <p>Cette section concerne les différents éléments d'un monocycle</p>
            </div>
        </div>
        {% for equipment in equipments %}
            <div class="row mt-5 justify-content-around">
                <img class="img col-11 col-lg-5 p-0" src="{{ asset('uploads/equipment/' ~ equipment.picture) }}" alt="Image club">
                <div class="col-11 col-lg-5">
                    <h2 class="text-center mt-4">{{ equipment.name }}</h2>
                    <p class="mt-3">{{ equipment.description }}</p>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
