{% extends 'base.html.twig' %}

{% block title %}Equipment index{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5">Equipment</h1>
        <div class="row mt-5">
            <div class="col text-center">
                <p>Cette section concerne les différents éléments d'un monocycle</p>
            </div>
        </div>
        {% for equipment in equipments %}
            <div class="row mt-5">
                <img class="img col-4 p-0" src="{{ asset('uploads/equipment/' ~ equipment.picture) }}" alt="Image club">
                <div class="col-7 offset-1">
                    <h2 class="text-center">{{ equipment.name }}</h2>
                    <p class="mt-3">{{ equipment.description }}</p>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
